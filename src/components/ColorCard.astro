---
interface Props {
  name: string;
  description: string;
  cssVar: string;
  hexValue: string;
  bgClass?: string;
  textClass?: string;
  borderClass?: string;
  codeBlockOpacity?: number;
}

const { 
  name, 
  description, 
  cssVar, 
  hexValue, 
  bgClass = 'bg-primary',
  textClass = 'text-white',
  borderClass = '',
  codeBlockOpacity = 20
} = Astro.props;
---

<div class={`p-6 ${bgClass} ${textClass} ${borderClass} rounded-lg shadow-sm`}>
  <div class="font-bold text-2xl mb-2">{name}</div>
  <div class="text-sm opacity-90 mb-4">{description}</div>
  <code class={`text-xs block bg-black/${codeBlockOpacity} p-2 rounded`}>{cssVar}</code>
  <code class={`text-xs block bg-black/${codeBlockOpacity} p-2 rounded mt-1`}>{hexValue}</code>
</div>
