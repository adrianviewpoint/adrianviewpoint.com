---
interface Props {
  name: string;
  description: string;
  cssVar: string;
  hexValue: string;
  bgClass?: string;
  textClass?: string;
  borderClass?: string;
  codeBlockOpacity?: number;
}

const { 
  name, 
  description, 
  cssVar, 
  hexValue, 
  bgClass = 'bg-primary',
  textClass = 'text-white',
  borderClass = '',
  codeBlockOpacity = 20
} = Astro.props;

// Map opacity values to complete Tailwind classes
// This ensures Tailwind includes these classes in the production build
const opacityClassMap: Record<number, string> = {
  10: 'bg-black/10',
  20: 'bg-black/20'
};

const codeBlockBgClass = opacityClassMap[codeBlockOpacity] || 'bg-black/20';
---

<div class={`p-6 ${bgClass} ${textClass} ${borderClass} rounded-lg shadow-sm`}>
  <div class="font-bold text-2xl mb-2">{name}</div>
  <div class="text-sm opacity-90 mb-4">{description}</div>
  <code class={`text-[0.6875rem] block p-2 rounded overflow-x-auto whitespace-nowrap ${codeBlockBgClass}`}>{cssVar}</code>
  <code class={`text-[0.6875rem] block p-2 rounded mt-1 overflow-x-auto whitespace-nowrap ${codeBlockBgClass}`}>{hexValue}</code>
</div>
