---
import Layout from '../layouts/Layout.astro';
import HeroBanner from '../components/HeroBanner.astro';
---

<Layout title="Welcome to Adrian Viewpoint">
  <div class="container mx-auto px-4 py-16">
    <!-- Hero Section -->
    <HeroBanner
      title="Welcome to Adrian Viewpoint"
      description="A modern website showcasing your brand's unique color palette with seamless light and dark mode support."
      primaryButton={{
        label: "Get Started"
      }}
      secondaryButton={{
        label: "Learn More"
      }}
    />

    <script>
      const heroBanner = document.querySelector('[data-hero-banner]');

      if (heroBanner) {
        heroBanner.addEventListener('primaryClick', () => {
          alert('Get Started clicked!');
        });

        heroBanner.addEventListener('secondaryClick', () => {
          alert('Learn More clicked!');
        });
      }
    </script>

    <!-- Brand Colors Showcase -->
    <section class="mb-20">
  <h2 class="text-3xl font-bold mb-8 text-primary">Brand Colors</h2>
      <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
        <div class="space-y-2">
          <div class="bg-brand-charcoal h-24 rounded-lg"></div>
          <p class="text-sm text-secondary">Charcoal</p>
        </div>
        <div class="space-y-2">
          <div class="bg-brand-burgundy h-24 rounded-lg"></div>
          <p class="text-sm text-secondary">Burgundy</p>
        </div>
        <div class="space-y-2">
          <div class="bg-brand-slate h-24 rounded-lg"></div>
          <p class="text-sm text-secondary">Slate</p>
        </div>
        <div class="space-y-2">
          <div class="bg-brand-beige h-24 rounded-lg"></div>
          <p class="text-sm text-secondary">Beige</p>
        </div>
        <div class="space-y-2">
          <div class="bg-brand-gray h-24 rounded-lg"></div>
          <p class="text-sm text-secondary">Gray</p>
        </div>
      </div>
    </section>

    <!-- Feature Cards -->
    <section class="mb-20">
  <h2 class="text-3xl font-bold mb-8 text-primary">Features</h2>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="bg-surface border border-border p-6 rounded-lg hover:border-primary transition-colors">
          <h3 class="text-xl font-semibold mb-3 text-primary">Responsive Design</h3>
          <p class="text-secondary">
            Beautiful layouts that work seamlessly across all devices and screen sizes.
          </p>
        </div>
        <div class="bg-surface border border-border p-6 rounded-lg hover:border-secondary transition-colors">
          <h3 class="text-xl font-semibold mb-3 text-secondary">Dark Mode</h3>
          <p class="text-secondary">
            Automatic dark mode support with smooth transitions and proper contrast.
          </p>
        </div>
        <div class="bg-surface border border-border p-6 rounded-lg hover:border-accent transition-colors">
          <h3 class="text-xl font-semibold mb-3 text-accent">Fast Performance</h3>
          <p class="text-secondary">
            Built with Astro for lightning-fast page loads and optimal performance.
          </p>
        </div>
      </div>
    </section>

    <!-- Color Usage Examples -->
    <section>
  <h2 class="text-3xl font-bold mb-8 text-primary">Design Elements</h2>
      <div class="space-y-6">
        <div class="bg-surface border border-border-muted p-6 rounded-lg">
          <h3 class="text-lg font-semibold mb-2">Text Hierarchy</h3>
          <p class="text-primary mb-2">Primary text uses the main text color</p>
          <p class="text-secondary mb-2">Secondary text is slightly muted</p>
          <p class="text-muted">Muted text for less important information</p>
        </div>
        
        <div class="flex flex-wrap gap-4">
          <button class="bg-brand-burgundy text-white px-4 py-2 rounded hover:opacity-90">
            Primary Action
          </button>
          <button class="bg-brand-slate text-white px-4 py-2 rounded hover:opacity-90">
            Secondary Action
          </button>
          <button class="bg-brand-charcoal text-white px-4 py-2 rounded hover:opacity-90">
            Accent Action
          </button>
        </div>

        <div class="flex flex-wrap gap-4">
          <span class="inline-block bg-brand-beige text-brand-charcoal px-3 py-1 rounded-full text-sm">
            Tag 1
          </span>
          <span class="inline-block bg-brand-gray text-white px-3 py-1 rounded-full text-sm">
            Tag 2
          </span>
        </div>
      </div>
    </section>
  </div>
</Layout>
