---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';
import HeroBanner from '../components/HeroBanner.astro';

// Get featured articles
const allArticles = await getCollection('articles');
const teslaArticle = allArticles.find(article => article.slug === 'tesla-energy');
const gettingStartedArticle = allArticles.find(article => article.slug === 'getting-started-challenge');
---

<Layout title="Welcome to Adrian Viewpoint">
  <div class="container mx-auto px-4 py-16">
    <!-- Hero Section -->
    <HeroBanner
      title="Geek Out on Code.<br>Master Your Money.<br>Build the Future."
      description="Explore coding adventures, financial wisdom, and creative projects. Join a community passionate about tech innovation and smart money moves—let's geek out together!"
      primaryButton={{
        label: "About"
      }}
      secondaryButton={{
        label: "Style Guide"
      }}
      rightImage="/hero-banner-art.svg"
    />

    <!-- Featured Articles -->
    <section class="mb-20">
      <h2>Featured Articles</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {gettingStartedArticle && (
          <article class="bg-surface border border-border rounded-lg overflow-hidden hover:border-accent transition-colors group">
            {gettingStartedArticle.data.image && (
              <a href={`/articles/${gettingStartedArticle.slug}`}>
                <img 
                  src={gettingStartedArticle.data.image} 
                  alt={gettingStartedArticle.data.title}
                  class="w-full aspect-video object-cover"
                />
              </a>
            )}
            <div class="p-6">
              <div class="flex gap-2 mb-3">
                <span class="inline-block bg-brand-charcoal text-white px-3 py-1 rounded-full text-xs font-semibold">
                  Personal Development
                </span>
                <span class="text-sm text-muted">
                  {gettingStartedArticle.data.readingTime}
                </span>
              </div>
              <h3 class="text-xl font-bold mb-2 text-primary group-hover:text-secondary transition-colors">
                {gettingStartedArticle.data.title}
              </h3>
              <p class="text-secondary mb-4">
                {gettingStartedArticle.data.description}
              </p>
              <a href={`/articles/${gettingStartedArticle.slug}`} class="text-primary font-semibold hover:text-secondary transition-colors">
                Read more →
              </a>
            </div>
          </article>
        )}

        {teslaArticle && (
          <article class="bg-surface border border-border rounded-lg overflow-hidden hover:border-secondary transition-colors group">
            {teslaArticle.data.image && (
              <a href={`/articles/${teslaArticle.slug}`}>
                <img 
                  src={teslaArticle.data.image} 
                  alt={teslaArticle.data.title}
                  class="w-full aspect-video object-cover"
                />
              </a>
            )}
            <div class="p-6">
              <div class="flex gap-2 mb-3">
                <span class="inline-block bg-brand-slate text-white px-3 py-1 rounded-full text-xs font-semibold">
                  Money & Investing
                </span>
                <span class="text-sm text-muted">
                  {teslaArticle.data.readingTime}
                </span>
              </div>
              <h3 class="text-xl font-bold mb-2 text-primary group-hover:text-secondary transition-colors">
                {teslaArticle.data.title}
              </h3>
              <p class="text-secondary mb-4">
                {teslaArticle.data.description}
              </p>
              <a href={`/articles/${teslaArticle.slug}`} class="text-primary font-semibold hover:text-secondary transition-colors">
                Read more →
              </a>
            </div>
          </article>
        )}
      </div>
    </section>

    
  </div>
</Layout>

<script>
  const heroBanner = document.querySelector('[data-hero-banner]');

  if (heroBanner) {
    heroBanner.addEventListener('primaryClick', () => {
      window.location.href = '/about';
    });

    heroBanner.addEventListener('secondaryClick', () => {
      window.location.href = '/styleguide';
    });
  }
</script>